- INDEX_CSS = INDEX_CSS ? INDEX_CSS : 'index.css'
- INDEX_JS = INDEX_JS ? INDEX_JS : 'index.js'

- VENDORS_JS = VENDORS_JS ? VENDORS_JS : 'vendors.js'
- GAME_JS = GAME_JS ? GAME_JS : 'game.js'

doctype html
html
  head
    title WebVR Bowling Game
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(type="text/css" rel="stylesheet" href="/css/"+INDEX_CSS)
    include webfontloader.html
  body
    main
      header.main__header
        h1.main-title.sr-only Virtual Lanes
      section.dp-f.ff-cnw.ai-c.jc-c.landing.section.section-0
        header.dp-f.jc-c.ai-c.landing__header
          h1.dp-f.ff-cnw.landing__title Virtual
            span.dp-f.as-fe.landing__title__span Lanes
        article.dp-f.ff-cnw.ai-c.landing__content
          h2.landing__subtitle a multiplayer virtual reality bowling game
          div.dp-f.ff-rnw.ai-c.jc-sb.btn-wrapper
            button.dp-f.btn.button_create-room Create Room
            button.dp-f.btn Join Room

      section.dp-f.ff-cnw.ai-c.jc-sa.section.room
        header.section__header.room__header.sr-only
          h1.section__title.room__title Create Room
        div.dp-f.ff-rw.room__phrase
          include create-room.html
        div.dp-f.ff-rnw.jc-c.btn-wrapper
          button.dp-f.btn Open Room


      section.dp-f.ff-cnw.ai-c.jc-sa.section.room
        header.section__header.room__header.sr-only
          h1.section__title.room__title Created Room
        div.dp-f.ff-cnw.ai-c.room__phrase
          include created-room.html
        div.dp-f.ff-rnw.jc-c.btn-wrapper
          button.dp-f.btn Let's Play

      section.dp-f.ff-cnw.ai-c.jc-sa.section.room
        header.section__header.room__header.sr-only
          h1.section__title.room__title Joining Room
        div.dp-f.ff-cnw.ai-c.room__phrase
          include joining-room.html
        div.dp-f.ff-rnw.jc-c.btn-wrapper
          button.dp-f.btn.button_join-room Join Room

      section.dp-f.ff-cnw.ai-c.jc-sa.section.room
        header.section__header.room__header.sr-only
          h1.section__title.room__title Joined Room
        div.dp-f.ff-cnw.ai-c.room__phrase
          include joined-room.html

      section.dp-f.ff-cnw.ai-c.jc-c.section.section-1
        div.row
          input.input.input_user-name(placeholder="User Name")
        div.row
          input.input.input_user-picture(type="file" accept="image/*")
        div.row
          button.button.button_ready Ready

      section.dp-f.ff-cnw.ai-c.jc-c.section.section-2
        include game.html

    script(type="text/javascript" src="/socket.io/socket.io.js" defer)
    script(type="text/javascript" src="/js/vendor/webrtc-adapter-6.0.2.min.js" defer)
    script(type="text/javascript" src="/js/"+INDEX_JS defer)

    - // we will be loading this stuff later when we arrive on the game page
    - // we will take the data-src and add it as src
    - // but the files will be loaded by index.js immediately when the page loads

    script(type="text/javascript" data-src="/js/vendor/aframe-0.7.1.min.js" defer).deferredScript
    script(type="text/javascript" data-src="/js/vendor/aframe-glow.js" defer).deferredScript
    script(type="text/javascript" data-src="/js/"+GAME_JS defer).deferredScript
