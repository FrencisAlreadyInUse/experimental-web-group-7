- INDEX_CSS = INDEX_CSS ? INDEX_CSS : 'index.css'
- INDEX_JS = INDEX_JS ? INDEX_JS : 'index.js'

- VENDORS_JS = VENDORS_JS ? VENDORS_JS : 'vendors.js'
- GAME_JS = GAME_JS ? GAME_JS : 'game.js'

doctype html
html
  head
    title WebVR Bowling Game
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(type="text/css" rel="stylesheet" href="/css/"+INDEX_CSS)

    script
      include webfontloader.html
  body

    section.section.section-0
      div.row
        button.button.button_create-room Create Room
        div.input.target_room-name
      div.row
        input.input.input_room-name(placeholder="Room Name")
        button.button.button_join-room Join Room

    section.section.section-1
      div.row
        input.input.input_user-name(placeholder="User Name")
      div.row
        input.input.input_user-picture(type="file" accept="image/*")
      div.row
        button.button.button_ready Ready

    section.section.section-2
      include game.html

    script(type="text/javascript" src="/socket.io/socket.io.js" defer)
    script(type="text/javascript" src="/js/vendor/webrtc-adapter-6.0.2.min.js" defer)
    script(type="text/javascript" src="/js/"+INDEX_JS defer)

    - // we will be loading this stuff later when we arrive on the game page
    - // we will take the data-src and add it as src
    - // but the files will be loaded by index.js immediately when the page loads

    script(type="text/javascript" data-src="/js/vendor/aframe-0.7.1.min.js" defer).deferredScript
    script(type="text/javascript" data-src="/js/vendor/aframe-glow.js" defer).deferredScript
    script(type="text/javascript" data-src="/js/"+GAME_JS defer).deferredScript
