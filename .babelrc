{
  "presets": [
    [
      "env",
      {
        "targets": {
          "node": "current",
          "browsers": ["last 2 versions", "ie >= 10"]
        },
        "modules": false,
        "loose": true
      }
    ]
  ],

  "plugins": [
    "external-helpers",
    "transform-decorators-legacy",
    "transform-class-properties",
    "transform-object-rest-spread"
  ],

  "env": {
    "production": {
      "plugins": ["lodash"]
    }
  }
}
